<div class="col-md-6 col-md-offset-3">
  <div style="text-align:center">
    <h1>Welcome To Our</h1>
    <h1><strong>ANAGRAM GENERATOR</strong></h1>
<br>
    <% if @error.present? %>
      <p class='error'><%= "#{@error}" %></p>
    <% end %>
  </div>
</div>
<div class="col-md-6 col-md-offset-3">
  <form role="form" action="/" method="post">
    <p id="ital">Letters ONLY Please!</p>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="word" > </label>
        <input type="text" pattern ="[A-Za-z]+" name="word">
      </div>
      <div class="form-group">
        <div>
          <button type="submit"  class="btn btn-danger showme">Show Me My Anagrams!</button>
        </div>
      </div>
    </form>
  </form>
</div>
