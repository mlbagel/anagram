<div class="col-md-6 col-md-offset-3 center">
  <h1 >Anagrams for <%= "#{@word}" %></h1>
<img src="/images/arrow.png" alt="arrow" style="width: 50px;height: 50px; text-align: center;" />
  <ul class="list">
    <% if !@anagrams.nil? %>
        <% @anagrams.each do |item| %>
          <li>
            <%= "#{item.text}" %>
          </li>
        <% end %>
      <% else %>
        <%= "No Anagrams for this word" %>
    <% end %>
  </ul>
</div>
